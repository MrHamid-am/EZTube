<Application x:Class="EZTube.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:EZTube">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:CustomColorTheme  BaseTheme="Light" PrimaryColor="Black" SecondaryColor="White"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />

                <ResourceDictionary>
                    <local:Bootstrapper x:Key="bootstrapper"/>
                </ResourceDictionary>

                <ResourceDictionary Source="ApplicationResources/Base_Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="RedColor">#FF0000</Color>
            <SolidColorBrush x:Key="RedBrush" Color="{StaticResource RedColor}"/>
            <SolidColorBrush x:Key="WhiteColor" Color="#FFFFFF"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
